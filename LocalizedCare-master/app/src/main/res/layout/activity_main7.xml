<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#5CC4BD"
    android:layout_height="match_parent"
    tools:context=".Main7Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:contentPadding="2dip"
            android:clickable="true"

            >
            <!--on ajoute lattribut onclick a la cardview et une fonction-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/localisermed"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#494D4E"
                        android:textSize="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"

                        android:text="Cliquez pour ajouter votre clinique"/>




                </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:contentPadding="2dip"
            android:clickable="true"

            >
            <!--on ajoute lattribut onclick a la cardview et une fonction-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/pharmalocalise"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#494D4E"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"

                    android:text="Cliquez pour ajouter votre pharmacie"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:contentPadding="2dip"
            android:clickable="true"

            >
            <!--on ajoute lattribut onclick a la cardview et une fonction-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/localisermed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#494D4E"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"

                    android:text="Cliquez pour ajouter votre cabinet medical"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>








    </LinearLayout>


</ScrollView>